public func QualType usual_arithmetic_conversion(const BuiltinType* b1, const BuiltinType* b2) {
    BuiltinKind k1 = b1.getBaseKind();
    BuiltinKind k2 = b2.getBaseKind();

    switch(UsualArithmeticConversions[k2][k1]) {
    case 0:
        return ast.g_i32;
    case 1:
        return ast.g_u32;
    case 2:
        return ast.g_i64;
    case 3:
        return ast.g_u64;
    case 4:
        return ast.g_f32;
    case 5:
        return ast.g_f64;
    case 6:
        break;
    }
    return QualType_Invalid;
}

