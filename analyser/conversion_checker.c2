public func QualType get_common_arithmetic_type(QualType t1, QualType t2) {
    assert(t1.isBuiltin());
    assert(t2.isBuiltin());

    BuiltinType* bi1 = t1.getBuiltin();
    BuiltinType* bi2 = t2.getBuiltin();
    BuiltinKind kind = cast<BuiltinKind>(ConditionalOperatorResult[bi2.getKind()][bi1.getKind()]);
    switch (kind) {
    case Char:
        return ast.g_char;
    case Int8:
        return ast.g_i8;
    case Int16:
        return ast.g_i16;
    case Int32:
        return ast.g_i32;
    case Int64:
        return ast.g_i64;
    case UInt8:
        return ast.g_u8;
    case UInt16:
        return ast.g_u16;
    case UInt32:
        return ast.g_u32;
    case UInt64:
        return ast.g_u64;
    case Float32:
        return ast.g_f32;
    case Float64:
        return ast.g_f64;
    case ISize:
        return ast.g_isize;
    case USize:
        return ast.g_usize;
    case Bool:
        return ast.g_bool;
    case Void:
        break;
    }
    return QualType_Invalid;
}

