static_assert(elemsof(Kind), elemsof(token_names));

public fn const char* Kind.str(Kind k) {
    return token_names[k];
}

public type Token struct {
    SrcLoc loc;
    Kind kind;
    bool more;
    bool has_error;
    u8 radix;   // for IntegerLiteral (2,8,10,16) and CharLiteral
    union {
        const char* error_msg;  // ERROR
        struct {
            u32 text_idx;  // Identifier
            u32 text_len;  // StringLiteral, includes 0
        }
        u64 int_value;     // IntegerLiteral
        f64 float_value;   // FloatLiteral
        u8 char_value;     // CharLiteral
    }
}
static_assert(16, sizeof(Token));

public fn void Token.init(Token* tok) {
    string.memset(tok, 0, sizeof(Token));
    tok.more = true;
}

public type KWInfo struct {
    // Note: should be big enough to hold all keywords (currently 350-ish)
    Kind[512] indexes;
    u32 max_index;
}

public fn void KWInfo.init(KWInfo* info, string_pool.Pool* pool) {
    u32 idx = 0;
    for (Kind k = Kind.KW_bool; k <= Kind.KW_while; k++) {
        const char *s = token_names[k];
        idx = pool.add(s, string.strlen(s), 1);
        assert(idx < elemsof(info.indexes));
        info.indexes[idx] = k;
    }
    info.max_index = idx;
}

