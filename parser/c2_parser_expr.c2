    [Kind.Tilde] = 7,
    [Kind.Plus] = 7,
    [Kind.Minus] = 7,
    [Kind.Exclaim] = 7,
    [Kind.Amp] = 7,
    [Kind.PlusPlus] = 7,
    [Kind.MinusMinus] = 7,
    [Kind.KW_cast] = 8,
