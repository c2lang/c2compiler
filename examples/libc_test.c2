func void test_stdio() {
    io.printf("testing io\n");

    int32 res = io.remove("remove.txt");
    if (res == -1) {
        int32 err = c_errno.errno;
        io.perror("remove");
    }

    res = io.rename("rename.txt", "rename2.txt");
    if (res == -1) {
        io.perror("rename");
    }

    io.FILE* f = io.tmpfile();
    if (f == nil) {
        io.fprintf(io.stderr, "error creating tmpfile\n");
    }
}

