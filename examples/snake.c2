type Coor struct {
    int8 x;
    int8 y;
    uint8 flags;
}

type Piece struct {
    Coor[4] side1;
    Coor[4] side2;
}

type FieldStatus enum int8 {
    FIELD_FREE = 0,
    FIELD_BLOCKED,
    FIELD_TAKEN,    // + index of piece
}

type Field struct {
#if 0
    FieldStatus status : 2;
    uint32 piece_id : 4;
    uint32 flags : 3;
    uint32 expected : 3;  // set by other pieces
#endif
    FieldStatus status;
    uint8 piece_id;
    uint8 flags;
    uint8 expected;  // set by other pieces
}

type Flags enum int8 {
    NORTH = 1,
    EAST  = 2,
    SOUTH = 3,
    WEST  = 4,
    HEAD  = 5,
    TAIL  = 6,
}

type Board struct {
    Field[5*5] fields;
    bool haveHead;
    bool haveTail;
}

type Option struct {
    Coor[4] parts;
}

