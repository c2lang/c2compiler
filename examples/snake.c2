Option[NumOptions][NumPieces] options;
const int32 NumPieces = elemsof(pieces);
const int32 NumOptions = 8;

type PositionType enum int8 {
    PLACE_FREE = 0, // not placed yet
    PLACE_SETUP,    // placed by initial setup
    PLACE_PLACED,   // placed during search
}

type Position struct {
    PositionType postype;
    int8 option;
    int8 x;
    int8 y;
}

const Position[] Setup = {
    [0] = { PLACE_SETUP, 0, 1, 4 },
}


func Coor Coor.rotate(const Coor* input, uint32 rotation) {
    int8 x = input.x;
    int8 y = input.y;
    int8 t;
    switch (rotation) {
    case 0: // nothing to do
        break;
    case 1: // 90 degrees right
        t = x;
        x = y;
        y = -t;
        break;
    case 2: // 180 degrees right
        x = -x;
        y = -y;
        break;
    case 3: // 270 degrees right
        t = x;
        x = -y;
        y = t;
        break;
    }
    uint8 flags = input.flags;  // keep HEAD/TAIL, rotate NESW
    if (rotation > 0 && flags >= NORTH && flags <= WEST) {
        flags += rotation;
        if (flags > 4) flags -= 4;
    }

    Coor result = { x, y, flags }
    return result;
}

// calculate all rotations + flipped rotations
func void calculate_rotations() {
    memset(options, 0, sizeof(options));
    for (uint32 p=0; p<NumPieces; p++) {
        const Piece* pp = &pieces[p];
        for (uint32 o=0; o<4; o++) {  // 4 rotations
            Option* o1 = &options[o][p];
            for (uint32 i=0; i<4; i++) {  // side1
                Coor c = pp.side1[i];
                if (i != 0 && c.x == 0 && c.y == 0) break;
                o1.parts[i] = c.rotate(o);
            }
            Option* o2 = &options[o+4][p];
            for (uint32 i=0; i<4; i++) {  // side2
                Coor c = pp.side2[i];
                if (i != 0 && c.x == 0 && c.y == 0) break;
                o2.parts[i] = c.rotate(o);
            }
        }
    }
}

func void Board.set(Board* b, int32 x, int32 y, Field field) {
    b.fields[x + y * 5] = field;
}

func Field Board.get(Board* b, int32 x, int32 y) {
    return b.fields[x + y * 5];
}

func void Board.clearflags(Board* b, int32 x, int32 y) {
    b.fields[x + y * 5].expected = 0;
}

func void Board.setExpected(Board* b, int32 x, int32 y, uint8 side) {
    b.fields[x + y * 5].expected = side;
}

func void Board.init(Board* b) {
    Field f;
    f.status = FIELD_FREE;
    f.piece_id = 0;
    f.flags = 0;
    f.expected = 0;
    for (int32 y=0; y<5; y++) {
        for (int32 x=0; x<5; x++) {
            b.set(x, y, f);
        }
    }
    f.status = FIELD_BLOCKED;
    b.set(0, 4, f);
    b.haveHead = 0;
    b.haveTail = 0;
}

func char flags2char(int32 flags) {
    char f = ' ';
    switch (flags) {
    case NORTH:
        f = 'N';
        break;
    case EAST:
        f = 'E';
        break;
    case SOUTH:
        f = 'S';
        break;
    case WEST:
        f = 'W';
        break;
    case HEAD:
        f = 'H';
        break;
    case TAIL:
        f = 'T';
        break;
    }
    return f;
}

func void Board.print(Board* b) {
    char[1024] buffer;
    memset(buffer, 0, sizeof(buffer));
    char* cp = buffer;
    cp += io.sprintf(cp, "Board: Head=%d  Tail=%d\n", b.haveHead, b.haveTail);
    for (int32 y=4; y>=0; y--) {
        cp += io.sprintf(cp, "---------------------\n");
        for (int32 x=0; x<5; x++) {
            *cp++ = '|';
            Field field = b.fields[x + y * 5];
            switch (field.status) {
            case FIELD_FREE:
                if (field.expected) {
                    cp += io.sprintf(cp, ANSI_RED"%c"ANSI_NORMAL, flags2char(field.expected));
                } else {
                    *cp++ = ' ';
                }
                *cp++ = ' ';
                *cp++ = ' ';
                break;
            case FIELD_BLOCKED:
                cp += io.sprintf(cp, ANSI_DARKGREY"XXX"ANSI_NORMAL);
                break;
            default:
            {
                int32 flags = field.flags;
                if (field.expected) {
                    cp += io.sprintf(cp, ANSI_RED"%c"ANSI_NORMAL, flags2char(field.expected));
                } else {
                    *cp++ = ' ';
                }
                cp += io.sprintf(cp, ANSI_GREEN"%c", '0' + field.piece_id);
                *cp++ = flags2char(flags);
                cp += io.sprintf(cp, ANSI_NORMAL);
                break;
            }
            }
        }
        *cp++ = '|';
        *cp++ = '\n';
    }
    cp += io.sprintf(cp, "---------------------\n");
    *cp = 0;
    io.puts(buffer);
}

func int32 Board.check_fault(Board* b, int32 xx, int32 yy, int32 expect) {
    Field f = b.get(xx, yy);
    switch (f.status) {
    case FIELD_FREE:
        if (f.expected && f.expected != expect) return 1;
        break;
    case FIELD_BLOCKED:
        return 1;
    case FIELD_TAKEN:
        if (f.flags != expect) return 1;
        break;
    }
    return 0;
}

// return 0=OK, 1=Not OK
func int32 Board.try_option(Board* b, const Option* pp, int32 x, int32 y) {
    for (uint32 i=0; i<4; i++) {
        Coor c = pp.parts[i];
        if (i != 0 && c.x == 0 && c.y == 0) return 0;    // ignore unused parts
        int32 xx = x + c.x;
        if (xx < 0 || xx > 4) return 1;
        int32 yy = y + c.y;
        if (yy < 0 || yy > 4) return 1;
        Field f = b.get(xx, yy);
        if (f.status != FIELD_FREE) return 1;
        if (f.expected != 0 && f.expected != c.flags) return 1;
        switch (c.flags) {
        case NORTH:
            if (yy == 4) return 1;
            if (b.check_fault(xx, yy+1, SOUTH)) return 1;
            break;
        case EAST:
            if (xx == 4) return 1;
            if (b.check_fault(xx+1, yy, WEST)) return 1;
            break;
        case SOUTH:
            if (yy == 0) return 1;
            if (b.check_fault(xx, yy-1, NORTH)) return 1;
            break;
        case WEST:
            if (xx == 0) return 1;
            if (b.check_fault(xx-1, yy, EAST)) return 1;
            break;
        case HEAD:
            if (b.haveHead) return 1;
            break;
        case TAIL:
            if (b.haveTail) return 1;
            break;
        }
    }
    return 0;
}

func void Board.add(Board* b, const Option* pp, int32 x, int32 y, uint8 id) {
    for (uint32 i=0; i<4; i++) {
        Coor c = pp.parts[i];
        if (i != 0 && c.x == 0 && c.y == 0) break;
        int32 xx = x + c.x;
        int32 yy = y + c.y;
        Field field = b.get(xx, yy);
        //assert(field.status == FIELD_FREE);
        field.status = FIELD_TAKEN;
        field.piece_id = id;
        field.flags = c.flags;
        b.set(xx, yy, field);
        switch (c.flags) {
        case NORTH:
            b.setExpected(xx, yy+1, SOUTH);
            break;
        case EAST:
            b.setExpected(xx+1, yy, WEST);
            break;
        case SOUTH:
            field.flags = NORTH;
            b.setExpected(xx, yy-1, NORTH);
            break;
        case WEST:
            b.setExpected(xx-1, yy, EAST);
            break;
        case HEAD:
            b.haveHead = 1;
            break;
        case TAIL:
            b.haveTail = 1;
            break;
        }
    }
}

func void Board.rem(Board* b, const Option* pp, int32 x, int32 y) {
    for (uint32 i=0; i<4; i++) {
        Coor c = pp.parts[i];
        if (i != 0 && c.x == 0 && c.y == 0) break;
        int32 xx = x + c.x;
        int32 yy = y + c.y;
        Field field = b.get(xx, yy);
        field.status = FIELD_FREE;
        field.piece_id = 0;
        field.flags = 0;
        b.set(xx, yy, field);
        switch (c.flags) {
        case NORTH:
            b.clearflags(xx, yy+1);
            break;
        case EAST:
            b.clearflags(xx+1, yy);
            break;
        case SOUTH:
            b.clearflags(xx, yy-1);
            break;
        case WEST:
            b.clearflags(xx-1, yy);
            break;
        case HEAD:
            b.haveHead = 0;
            break;
        case TAIL:
            b.haveTail = 0;
            break;
        }
    }
}

uint32 found;
uint64 tried;
func void Board.try_peace(Board* b, uint8 p) {
    if (p == NumPieces) {
        found++;
        io.printf("Found solution %u\n", found);
        b.print();
        return;
    }
    if (Setup[p].postype == PLACE_SETUP) {
        int32 o = Setup[p].option;
        int32 x = Setup[p].x;
        int32 y = Setup[p].y;
        if (b.try_option(&options[o][p], x, y)) {
            io.printf("invalid setup: piece %d, option %d at %d,%d\n", p, o, x, y);
            return;
            //exit(-1);
        }
        b.add(&options[o][p], x, y, p);
        b.try_peace(p+1);
    }
    for (int32 y=4; y>=0; y--) {
        for (int32 x=0; x<5; x++) {
            Field f = b.get(x, y);
            if (f.status != FIELD_FREE) continue;
            for (uint32 o=0; o<NumOptions; o++) {
                if (!b.try_option(&options[o][p], x, y)) {
                    b.add(&options[o][p], x, y, p);
                    b.try_peace(p+1);
                    b.rem(&options[o][p], x, y);
                }
                tried++;
                if (p==0) break;
            }
        }
    }
}

public func int32 main() {
    calculate_rotations();

    Board board;
    board.init();
    board.try_peace(0);

    io.printf("%luM tries, found %d solutions\n", tried/1000000, found);
    return 0;
}

