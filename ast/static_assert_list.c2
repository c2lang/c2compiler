module ast;

import string local;
import stdlib local;

public type StaticAssertList struct {
    u32 count;
    u32 capacity;
    StaticAssert** asserts;
}

public fn void StaticAssertList.init(StaticAssertList* l, u32 initial_size) {
    l.count = 0;
    l.capacity = initial_size;
    l.asserts = nil;
    if (initial_size) {
        l.asserts = malloc(l.capacity * sizeof(StaticAssert*));
    }
}

public fn void StaticAssertList.free(StaticAssertList* l) {
    if (l.asserts) free(l.asserts);
}

public fn void StaticAssertList.add(StaticAssertList* l, StaticAssert* v) {
    if (l.count >= l.capacity) {
        l.capacity += 4;
        void* asserts2 = malloc(l.capacity * sizeof(StaticAssert*));
        void* old = l.asserts;
        if (old) {
            memcpy(asserts2, old, l.count * sizeof(StaticAssert*));
            free(old);
        }
        l.asserts = asserts2;
    }

    l.asserts[l.count] = v;
    l.count++;
}

public fn u32 StaticAssertList.size(const StaticAssertList* l) {
    return l.count;
}

public fn StaticAssert* StaticAssertList.getAt(const StaticAssertList* l, u32 idx) {
    return l.asserts[idx];
}

public fn StaticAssert** StaticAssertList.get(StaticAssertList* l) {
    return l.asserts;
}

