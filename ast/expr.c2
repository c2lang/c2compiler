public fn bool Expr.isTilde(const Expr* e) {
    while (e.isParen()) {
        const ParenExpr* p = (ParenExpr*)e;
        e = p.getInner();
    }
    if (e.getKind() == UnaryOperator) {
        const UnaryOperator* u = (UnaryOperator*)e;
        return (u.getOpcode() == Not);
    }
    return false;
}

