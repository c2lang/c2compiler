public fn bool Expr.needsSemi(const Expr* e) {
    switch (e.getKind()) {
    case IntegerLiteral:
    case FloatLiteral:
    case BooleanLiteral:
    case CharLiteral:
    case StringLiteral:
    case Nil:
    case Identifier:
    case Type:
    case Call:
        return true;
    case InitList:
        return false;
    case FieldDesignatedInit:
    case ArrayDesignatedInit:
        assert(0);  // cannot happen
        break;
    case BinaryOperator:
        const BinaryOperator* binop = (BinaryOperator*)e;
        const Expr* rhs = binop.getRHS();
        return rhs.needsSemi();
    case UnaryOperator:
    case ConditionalOperator:
    case Builtin:
    case ArraySubscript:
    case Member:
    case Paren:
    case BitOffset:
    case ExplicitCast:
    case ImplicitCast:
    case Range:
        break;
    case NamedArgument:
        const NamedArgument* n = (NamedArgument*)e;
        return n.getInner().needsSemi();
    case Alternate:
        const AlternateExpr* n = (AlternateExpr*)e;
        return n.getOriginal().needsSemi();
    }
    return true;
}

public fn void Expr.dump(const Expr* e) {
    string_buffer.Buf* out = ast.getDumpBuf();
    e.print(out, 0);
    ast.flushDumpBuf(out);
}

