// @recipe bin
$warnings no-unused

// @file{file1}
module foo;

public type Type struct {
    i32 x;
} @(opaque)

public func Type* Type.create() {
    Type* t = nil;
    return t;
}

func void Type.internal(Type* t) {
    t.x = 1;
}

public func void Type.init(Type* t) {
    t.internal();
}

// @file{file2}
module bar;

import foo local;

func void test() {
    Type* t = Type.create();
    t.init();       // ok
    t.x = 10;       // @error{cannot dereference opaque struct '(struct)foo.Type'}
}

